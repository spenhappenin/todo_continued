<h1> Create New List Item </h1>
<br />

<%= form_for @item do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  
  <%= f.label :completed %>
  <%= f.check_box :completed %>


  <%= f.submit %>
<% end %>

<br />
<%= link_to 'Main Page', items_path %>
